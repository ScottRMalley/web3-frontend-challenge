{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "build",
    "resolveJsonModule": true
  },
  "include": [
    "typechain-types/**/*.ts",
    "./index.ts"
  ]
}
